<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>@Model.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="~/Content/css/tenjin-style.css" rel="stylesheet">
    <base href="@Model.Url" />
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="navbar-header">
            <a class="navbar-brand" href="~/"><strong>@ViewBag.title</strong></a>
        </div>
    </nav>
    <div id="content" class="markdown">@Model.Content</div>

    <script src="~/Content/js/jquery-1.11.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/marked.js"></script>
    <!--[if lt IE 9]>
      <script src="~/Content/js/html5shiv.min.js"></script>
      <script src="~/Content/js/respond.min.js"></script>
    <![endif]-->

    <script>
        $(function () {
            $(".markdown").each(function () {
                $(this).html(marked($(this).text()));
            });
        });
    </script>
</body>
</html>
